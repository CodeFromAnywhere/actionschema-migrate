{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2015", "DOM"],
    "moduleResolution": "node16",
    "module": "node16",
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
